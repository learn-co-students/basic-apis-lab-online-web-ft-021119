<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<% if @repositories %>
<div>
  <ul>
  <% @repositories.each do |repository| %>
     <li>
       <strong><%= repository["name"] %></strong><br>
       <a href=<%= repository["html_url"] %>> <%= repository["html_url"] %> </a><br>
       <%= repository["description"] %><br>
     </li>
  <% end %>
  </ul>
</div>
<% end%>
